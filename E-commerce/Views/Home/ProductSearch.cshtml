@* @using E_commerce.Models; *@
@model List<E_commerce.Models.Product>


<div class="container mt-5 mb-5">
    <form asp-action="ProductSearch" asp-controller="Home" method="get">
        <div class="row">
            <div class="col-sm-10">
                <input type="text" name="xname" id="xname" class="form-control" placeholder="search" />
            </div>
            <input type="submit" class="col-sm-2 btn btn-primary" value="search" />
        </div>
    </form>
</div>


<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>The Products</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @foreach (var item in Model)
            {

                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item d-flex">
                        <div><i class="bi @item.photo"></i></div>
                        <div>
                            <h4 class="title"><a href="#" class="stretched-link">@item.name</a></h4>
                            <img src="../@item.photo" alt="@item.name" width="400px" height="400px" />
                            <h4><a href="">@item.name</a></h4>
                            <p class="description">@item.description</p>
                        </div>
                    </div>
                </div>
            }

            <!-- End Service Item -->


        </div>

    </div>

</section>
